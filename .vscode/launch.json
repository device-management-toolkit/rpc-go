{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "serverAddress",
            "type": "promptString",
            "description": "Enter the Server Address (e.g. localhost:8443)",
            "default": "localhost:8443"
        },
        {
            "id": "profileName",
            "type": "promptString",
            "description": "Enter the Profile Name",
            "default": "profile"
        },
        {
            "id": "dnsSuffix",
            "type": "promptString",
            "description": "Enter the DNS Suffix (optional, leave blank to skip)",
            "default": "vprodemo.com"
        }
    ],
    "configurations": [
        {
            "name": "Activate Device",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "activate",
                "-u",
                "wss://${input:serverAddress}/activate",
                "--profile",
                "${input:profileName}",
                "-n",
                "-v"
                // use if required "-d=${input:dnsSuffix}"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Activate Device (local)",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "activate",
                "--local",
                "--config",
                "${workspaceFolder}/config.yaml",
                "-n",
                "-v",
                "--acm"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "AMT Info",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "amtinfo"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Deactivate Device",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "deactivate",
                "-u",
                "wss://${input:serverAddress}/activate",
                "-f",
                "-n",
                "-v"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Deactivate Device (local)",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "deactivate",
                "--local",
                "-v"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Maintenance Task",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "maintenance",
                "deviceinfo",
                "-u",
                "wss://${input:serverAddress}/activate",
                "-n",
                "-v"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Configuration Task",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "configure",
                "mebx"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Version Info",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "version"
            ],
            "buildFlags": [
                "-race"
            ],
            "console": "integratedTerminal"
        },
    ]
}