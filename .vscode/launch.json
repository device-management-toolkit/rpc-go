{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Activate Device",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [
                "activate",
                "-u",
                "wss://[server]/activate",
                "--profile",
                "[profile]",
                "-n",
                "-v"
            ],
            "console": "integratedTerminal"
        },
