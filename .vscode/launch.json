{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Activate Device",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "activate",
                "-u",
                "wss://[server]/activate",
                "--profile",
                "[profile]",
                "-n",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Activate Device (local)",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "activate",
                "--local",
                "--config",
                "${workspaceFolder}/config.yaml",
                "-n",
                "-v",
                "--acm"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "AMT Info",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "amtinfo"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Deactivate Device",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "deactivate",
                "-u",
                "wss://[server]/activate",
                "-f",
                "-n",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Deactivate Device (local)",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "deactivate",
                "--local",
                "--config",
                "${workspaceFolder}/config.yaml",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Maintenance Task",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "maintenance",
                "deviceinfo",
                "-u",
                "wss://[server]/activate",
                "-n",
                "-v"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Configuration Task",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "configure",
                "mebx"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Version Info",
            "type": "go",
            "asRoot": true,
            "request": "launch",
            "program": "${workspaceFolder}/cmd/rpc/main.go",
            "args": [
                "version"
            ],
            "console": "integratedTerminal"
        }
    ]
}